(DEFPROP BREAST
	 (LAMBDA (:SIZE) 
		 (PROG NIL 
		       (do-invisibly
			(list '(RIGHT 90.)
			      (list 'FORWARD (TIMES 100. :SIZE))))
		  40.  (RIGHT 90.)
		  60.  (FORWARD (TIMES 50. :SIZE))
		  70.  (RIGHT 90.)
		  	(do-invisibly
		   (list (list 'FORWARD (TIMES 100. :SIZE))
		   '(RIGHT 180.)
		   (list 'ARC (TIMES 100. :SIZE) 180.)
		   '(RIGHT 90.)
		   (list 'FORWARD (TIMES 105. :SIZE))
		  (list 'CIRCLE (TIMES 20. :SIZE))
		  (list 'FORWARD (TIMES -100. :SIZE))
		   '(RIGHT 90.)
		  (list 'FORWARD (TIMES 100. :SIZE))
		   '(RIGHT 90.)))
		  200. (FORWARD (TIMES 50. :SIZE))))
	 EXPR)

