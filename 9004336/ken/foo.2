(define-form (d)
 (ask box make |Something|)
 (ask |Something| move up 300)
 (ask box make |Choice-Point|)
 (ask |Choice-Point| move up 100)
 (ask box make |Absolute-Choice-Point|)
 (ask |Absolute-Choice-Point| do the following (move left 400) (move down 100))
 (ask box make |Relative-Choice-Point|)
 (ask |Relative-Choice-Point| do the following (move right 400) (move down 100))
 (ask box make |(choice-point-of stepmother speed)|)
 (ask |(choice-point-of stepmother speed)| do the following (move left 400) (move down 400))
 (ask link make link-to-choice-point)
 (ask link-to-choice-point go from bottom of |Something| to top of |Choice-Point|)
 (ask link make link-to-absolute-choice-point)
 (ask link-to-absolute-choice-point
      go from bottom of |Choice-Point| to top of |Absolute-Choice-Point|)
 (ask link make link-to-relative-choice-point)
 (ask link-to-relative-choice-point
      go from bottom of |Choice-Point| to top of |Relative-Choice-Point|)
 (ask link make link-stepmother)
 (ask link-stepmother
      go from bottom of |Absolute-Choice-Point| to top of |(choice-point-of stepmother speed)|)
 )

