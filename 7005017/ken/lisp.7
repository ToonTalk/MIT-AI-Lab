(defun dicks-print n
       (cond ((= n 1) (/#print (arg 1)))
	     ((= n 2) (/#print (arg 1) (arg 2)))
	     (t ((lambda (prinmode)
			 (/#print (arg 1) (arg 2)))
		 (arg 3)))))

(defun dicks-prin1 n
       (cond ((= n 1) (/#prin1 (arg 1)))
	     ((= n 2) (/#prin1 (arg 1) (arg 2)))
	     (t ((lambda (prinmode)
			 (/#prin1 (arg 1) (arg 2)))
		 (arg 3)))))


