;; -*- lisp -*-

(defun init nil
 (load '|ai:ken;load|)
 (go-fast) ;;nouuo and *Rset to nil
 (director '(ani)))

(init)

(defun dump-ani nil
;;i use this to dump out Ani
       (ask something print memory) ;;load in the basic stuff
       (let ((a 1)) a) ;;to load in let in case its not already
       (setq no-value t) ;;rather than ? which is confusing
       (nouuo nil)
       (*rset t);;good default
       (sstatus flush t) ;;so that the Lisp need not be dumped with it
       (SUSPEND '|:CLEAR/
 : ----- YOU'RE IN DDT ------ /
 | '|second:ken1;ani >|)
 ;;now I'm back in the dumped lisp
       (SSTATUS GCTIME 0) ;;so that gc statistics are sensible (suggested by lisp news)
       (sstatus who1 42. '% 118. 0) ;;initializes and sets the wholine form baker;gcdemn
       (sstatus gcwho 3) ;;so that gc temporally shows itself
       (cursorpos 'c) ;;clear the space
       (remprop 'dump-ani 'expr) ;;dont need it anymore why waste space
       (princ '|Ani Welcomes you |)
       (and (status jcl)
	    (load (mergef (namelist (implode (status jcl)))
			  '((* ,(status uname)) ani |(INIT)|)))))

