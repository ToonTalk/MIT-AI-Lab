(defun RUNAWAY-FORWARD (x y run-type)
 (let* ((array (screen-buffer-pixel-array tv-default-screen))
	(max-x (array-dimension-n 1 array))
	(color (1+ run-type)))
       (do ((current-color (aref array x y) (aref array x y))
	    (x x (1+ x))
	    (count 1 (1+ count)))
	   ((or (= current-color color) (= x max-x)) count))))

(defun rectangle-spec (ignore ignore)
  (let* ((array (screen-buffer-pixel-array tv-default-screen))
	 (max-x (array-dimension-n 1 array))
	 (max-y (array-dimension-n 2 array)))
	(list 1 (- max-y 2) 1 (1- max-x))))
