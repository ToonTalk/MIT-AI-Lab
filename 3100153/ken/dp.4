
MAKE 'H2 '200
MAKE 'H1 '291
MAKE 'OUTLINE 'NIL

TO DPS :S1 :S2 :A1 :A2 :INC1 :INC2
10 CLEARSCREEN
20 SHADE 'CHECKER
30 DPSQI :S1 :S2 :A1 :A2 :INC1 :INC2
END

TO DP :S1 :S2 :A1 :A2
1 CLEARSCREEN
2 SHADE 'CHECKER
10 MAKE 'H1 HEADING MAKE 'H2 HEADING
15 PENDOWN
20 SETHEAD :H1 FORWARD :S1 RIGHT :A1 MAKE 'H1 HEADING
25 ERASERDOWN
30 SETHEAD :H2 FORWARD :S2 LEFT :A2 MAKE 'H2 HEADING
35 IF BOTH :H1 = 0 :H2 = 0 THEN STOP
40 GO 15
END

TO DPSQI :S1 :S2 :A1 :A2 :INC1 :INC2
10 MAKE 'H1 HEADING MAKE 'H2 HEADING
15 PENDOWN
20 SETHEAD :H1 FORWARD :S1 RIGHT :A1 MAKE 'H1 HEADING
25 ERASERDOWN
30 SETHEAD :H2 FORWARD :S2 LEFT :A2 MAKE 'H2 HEADING
35 IF BOTH :H1 = 0 :H2 = 0 THEN STOP
40 DPSQI :S1 + :INC1 :S2 + :INC2 :A1 :A2 :INC1 :INC2
END
