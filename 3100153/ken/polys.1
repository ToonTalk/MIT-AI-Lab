
MAKE 'ORIGINAL.HEADING '310
MAKE 'OUTLINE 'NIL

TO POLYS :ANGLE :SIZE :INC :TURN :DRIFT
10 POLY :SIZE :ANGLE
15 RIGHT :TURN
16 PENUP
17 FORWARD :DRIFT
18 PENDOWN
20 POLYS :ANGLE :SIZE + :INC :INC :TURN :DRIFT
END

TO POLY :SIZE :ANGLE
5 MAKE 'ORIGINAL.HEADING HEADING
10 FORWARD :SIZE
20 RIGHT :ANGLE
30 IF :ORIGINAL.HEADING = HEADING THEN STOP ELSE GO 10
END

TO MOVE
10 SHOWWINDOW 'FC :XCOR :YCOR
20 SLEEP 0.1
30 HIDEWINDOW 'FC :XCOR :YCOR
50 FORWARD 10
END

TO ARROW :SIZE
10 FORWARD :SIZE
20 RIGHT 35
30 BACK 2 * :SIZE
END
